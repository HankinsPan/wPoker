<!--index.wxml-->
<view>

  <swiper style="width: 100%; height: 180px;" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{imgUrls}}">
      <swiper-item>
        <image src="{{item}}" class="slide-image" style="width: 100%; height: 180px;" />
      </swiper-item>
    </block>
  </swiper>


</view>